<%- include('../partials/header'); %>
<div class="container">
    <div class="row">

        <div class="col-md-4 col-sm-6 mr-4 mb-4">
            <div class="media border p-3">

                <div class="media-body">
                    <img src="<%= user.avatar %>" class="mr-3 img" alt="profile image" srcset="">
                    <h4><%=user.firstName +" " + user.lastName %></h4>
                    <div class="caption">
                        <a href="mailto: <%= user.email %>"><%= user.email %></a>
                        <h6><%= user.bio %></h6>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7 col-sm-6">
            <h3><%= user.username %>'s Attractions</h3>

            <div class="">
                <% attractions.forEach(function(attraction){ %>

                <div class="card mb-4 ">
                    <img src=" <%= attraction.image%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= attraction.name %></h5>
                        <p class="card-text"><%= attraction.description.substring(0, 100) %>...</p>
                        <a href="/attractions/<%= attraction._id%>" class="btn button">More Info</a>
                    </div>
                </div>
                <% }); %>

            </div>

        </div>
    </div>

</div>










<%- include('../partials/footer'); %>