<%- include('../partials/header'); %>

<div class="comment-container container-fluid">
    <div class="row">
        <div class="col-md-12 col-lg-6 col-sm-12 form-container">
            <h1 class="comment form-title">Share Your Thought On <%= attraction.name %></h1>

            <form action="/attractions/<%= attraction._id %>/comments" method="post">
                <input class="form-control input-field" type="text" name="comment[text]" placeholder="text">
                <button class="button btn-lg mt-4 my-4" type="submit">Submit!</button>

            </form>

            <a href="/attractions">Go back</a>


        </div>
    </div>

</div>


<%- include('../partials/footer'); %>